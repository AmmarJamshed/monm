{
  "name": "monm-desktop",
  "version": "1.0.0",
  "description": "MonM Secure Messaging - Windows Desktop (PWA wrapper)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir"
  },
  "build": {
    "appId": "app.monm.secure",
    "productName": "MonM",
    "directories": {
      "output": "D:/monm/releases/desktop"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.8.1"
  }
}
