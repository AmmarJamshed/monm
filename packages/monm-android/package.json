{
  "name": "monm-android",
  "version": "1.0.0",
  "description": "MonM Secure Messaging - Android APK (PWA wrapper with screenshot prevention)",
  "main": "index.js",
  "scripts": {
    "build": "npx cap sync android",
    "open": "npx cap open android",
    "build:apk": "cd android && ./gradlew assembleDebug",
    "build:apk:release": "cd android && ./gradlew assembleRelease"
  },
  "capacitor": {
    "platforms": ["android"]
  },
  "dependencies": {
    "@capacitor/android": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@capacitor-community/privacy-screen": "^6.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.0.0"
  },
  "cap": {
    "appId": "app.monm.secure",
    "appName": "MonM",
    "webDir": "www"
  }
}
