# MonM Environment Configuration
# Copy this file to .env and fill in your values

# === POLYGON AMOY TESTNET ===
POLYGON_RPC_URL=https://rpc-amoy.polygon.technology
POLYGON_RPC_KEY=your_polygon_rpc_key
POLYGON_CHAIN_ID=80002

# === WEB3 STORAGE (IPFS) ===
WEB3_STORAGE_TOKEN=your_web3_storage_token

# === GROQ AI ===
GROQ_API_KEY=your_groq_api_key

# === SERP API (Leak Detection) ===
SERP_API_KEY=your_serp_api_key

# === SERVER ===
NODE_ENV=development
PORT=3001
WS_PORT=3002
PWA_URL=http://localhost:3000

# === PATHS (MUST use D:\monm\) ===
DATA_ROOT=D:\monm
DB_PATH=D:\monm\db\monm.db
LOG_PATH=D:\monm\logs
UPLOAD_PATH=D:\monm\uploads
TMP_PATH=D:\monm\tmp
KEYS_PATH=D:\monm\keys
